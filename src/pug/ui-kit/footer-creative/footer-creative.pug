        +logo
        .footer-creative__text 
            div= text
        +social-icon({images: [
            {'name': 'twitter', 'src': 'img/twitter.svg', href: '/mock-address/change-me',},
            {'name': 'facebook', 'src': 'img/facebook.svg', href: '/mock-address/change-me',},
            {'name': 'instagramm', 'src': 'img/instagramm.svg', href: '/mock-address/change-me',},
        ]})